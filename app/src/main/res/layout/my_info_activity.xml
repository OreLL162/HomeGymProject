<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/my_info_headline"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:gravity="bottom|center"
        android:text="Edit Your Stats :"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextUpdateAge"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:hint="Age"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#000000" />

        <EditText
            android:id="@+id/editTextUpdateHeight"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="Height (cm)"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#000000" />

        <EditText
            android:id="@+id/editTextUpdateWeight"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:hint="Weight (kg)"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#000000" />

        <Button
            android:id="@+id/equipment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#000000"
            android:text="choose equipment"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#000000"
            app:rippleColor="#000000"
            app:strokeColor="#000000" />

        <Button
            android:id="@+id/buttonSubmitUpdateInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:onClick="onGoBackClick"
            android:text="Go Back"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>
